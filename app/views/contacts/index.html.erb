<h1>Listing contacts</h1>
<table id="contacts" class="table table-hover">
  <thead>
  <tr>
    <th>id</th>
    <th>Name</th>
    <th>Street</th>
    <th>City</th>
    <th>Country</th>
    <th>Email</th>
    <th>VAT Number</th>
    <th>Birth date</th>
    <th>Gender</th>
    <th>Actions</th>
  </tr>
</thead>
<tbody>
  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.id %></td>
      <td><%= contact.name %></td>
      <td><%= contact.address.street %></td>
      <td><%= contact.address.city %></td>
      <td><%= contact.address.country %></td>
      <td><%= contact.email %></td>
      <td><%= contact.vat_number %></td>
      <td><%= contact.birth_date %></td>
      <td><%= contact.gender %></td>
      <td><%= link_to 'Show', contact %>
      <%= link_to 'Edit', edit_contact_path(contact) %>
      <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>
<%= paginate @contacts %>
<br />

<%= link_to 'New Contact', new_contact_path %>
